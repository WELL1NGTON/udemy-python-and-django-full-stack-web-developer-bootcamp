{
  "editor.rulers": [90],
  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true
  },
  "python.formatting.autopep8Args": ["--ignore", "E402"]
}
